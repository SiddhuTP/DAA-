#include <stdio.h>  
#include <conio.h>  
int main()  
{  
    // declare the local variables  
    int i, j, rows,k=1;  
    printf (" Enter a number to define the rows: \n ");  
    scanf("%d", &rows);   
    printf("\n");  
    for (i = 1; i <= rows; ++i)   
    {  
        for (j = 1; j <=rows-i; ++j)   
        {  
            printf (" ");   
        } 
		  for ( k = 1; k <=i; k++)  
        {  
            printf (" %d",k); 
			
        }   
        printf ("\n");   
    }  
    getch();      
}
